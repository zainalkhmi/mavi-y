{
    "productName": "Motion",
    "version": "0.0.0",
    "identifier": "com.motion.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Motion",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "copyright": "Copyright Â© 2026 MAVi Team. All rights reserved.",
        "licenseFile": "LICENSE.txt",
        "externalBin": [],
        "resources": [],
        "windows": {
            "nsis": {
                "installMode": "perMachine",
                "displayLanguageSelector": true
            }
        }
    }
}